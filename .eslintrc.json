{
    "extends": ["next", "next/core-web-vitals", "prettier"],
    "globals": {
        "React": "readonly"
    },
    "plugins": ["prettier"],
    "rules": {
        "no-unused-vars": [
            1,
            { "args": "after-used", "argsIgnorePattern": "^_" }
        ],
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "endOfLine": "auto"
            }
        ]
    }
}
